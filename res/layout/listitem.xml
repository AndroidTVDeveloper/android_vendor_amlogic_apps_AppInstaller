<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/APKListItem" android:orientation="horizontal" android:layout_height="50px">

<CheckBox android:layout_height="match_parent" android:gravity="center" android:layout_width="50px" android:clickable="false" android:id="@+id/InstallState" android:focusable="false" android:focusableInTouchMode="false"></CheckBox>
<ImageView android:layout_height="match_parent" android:id="@+id/APKIcon" android:layout_gravity="left|center_vertical" android:layout_width="50px" android:focusable="false" android:focusableInTouchMode="false"></ImageView>

<LinearLayout android:id="@+id/LinearLayout01" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent">
<TextView android:layout_gravity="top|left" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="left|center_vertical" android:layout_weight="2" android:id="@+id/appname" android:text="@string/app_name" android:textSize="20px"></TextView>
<TextView android:layout_gravity="bottom|left" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="left|center_vertical" android:layout_weight="1" android:id="@+id/apk_filepath" android:text="@string/defpath" android:textSize="16px" android:singleLine="true"></TextView>
</LinearLayout>


</LinearLayout>
